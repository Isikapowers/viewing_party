<div id='party_form' align='center'>
  
<h3>Welcome <%= @user.first_name %>!</h3><br>

<h5>Viewing Party Details for <%= @movie.title %></h5><br>

<%= form_with(model: @party, url: parties_path, method: :post, local: true) do |form| %>
  <%= form.hidden_field :movie_id, value: @movie.id %>
  <%= form.hidden_field :movie_title, value: @movie.title %>
  <%= form.text_field :duration, placeholder: 'Party Duration (in minutes)', value: @movie.runtime, min: 0 %><br><br>
  <%= form.date_field :date, placeholder: 'Date:' %><br><br>
  <%= form.time_field :time, placeholder: 'Time:' %><br><br>
<% end %>
</div>
